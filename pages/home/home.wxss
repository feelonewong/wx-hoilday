/* pages/home/home.wxss */
/* 当前页面设置背景色 */
page {
  background-color: #fafafa;
}
.slider,
.slider image {
  width: 750rpx;
  height: 320rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  padding: 28rpx 34rpx;
}

.item-image {
  position: relative;
}
.item-image text{
  position: absolute;
  left: 34rpx;
  top: -7rpx;
  background-image: url(https://yjy-teach-oss.oss-cn-beijing.aliyuncs.com/miniapp/going.png);
  width: 136rpx;
  height: 58rpx;
  line-height: 56rpx;
  background-size: cover;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  
}
.item-image image {
  width: 750rpx;
  height: 320rpx;
}
.info {
  padding: 30rpx 34rpx;
  background: #fff;
}

.info .tit {
  font-size: 30rpx;
}

.info .btn {
  margin-top: 16rpx;
  width: 86rpx;
  height: 42rpx;
  line-height: 42rpx;
  background-color: #ffc64b;
  border-radius: 4rpx;
  font-size: 24rpx;
  font-weight: 400;
  text-align: center;
  color: #fff;
}
